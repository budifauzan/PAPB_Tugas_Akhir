<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Baca_Cerita"

    >

    <android.support.design.widget.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:id="@+id/activity_baca_app_bar"
        android:background="@color/colorPrimary"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            >
            <TextView
                android:layout_gravity="center"
                android:layout_below="@id/activity_baca_app_bar"
                android:id="@+id/baca_carita_judul"
                android:text="Baca"
                android:padding="10dp"
                android:textColor="@android:color/white"
                android:gravity="center"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:layout_width="match_parent" />

            <Button

                android:id="@+id/activity_baca_bookmark"
                android:layout_gravity="center"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:background="@drawable/ic_bookmark_border_white_24dp"
                android:padding="10dp" />
        </LinearLayout>

    </android.support.design.widget.AppBarLayout>



    <ScrollView
        android:layout_margin="20dp"
        android:layout_below="@id/activity_baca_app_bar"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <TextView
            android:id="@+id/baca_cerita_konten"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fontFamily="sans-serif-smallcaps"
            android:text="Lorem IPSUM"
            android:layout_marginBottom="10dp"

            />
    </ScrollView>


</RelativeLayout>